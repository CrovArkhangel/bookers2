<%= form_for(book) do |f| %>
  <div class="form-title">
    <div class = "row">　Title</div>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-body">
  	<div class = "row">　Opinion</div>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success btn-sm btn-block mb-3" %>
  </div>
<% end %>

